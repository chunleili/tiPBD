{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debugpy: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-N=64",
                "-use_cuda=1",
                "-use_cache=1",
                "-arch=cuda"
            ]
        },
        {
            "name": "profile",
            "type": "debugpy",
            "request": "launch",
            "module": "cProfile",
            "justMyCode": true,
            "args":["-o",
                    "${fileBasenameNoExtension}.prof",
                    "${file}"]
        },
        {
            "name": "debugpy: cloth3d",
            "type": "debugpy",
            "request": "launch",
            "program": "engine/cloth/cloth3d.py",
            "console": "integratedTerminal",
            "args": [
                "-N=64",
                "-use_cache=0",
            ]
        },
        {
            "name": "Python C++ Debug",
            "type": "pythoncpp",
            "request": "launch",
            "pythonLaunchName": "Python: Current File",
            "cppAttachName": "(Windows) Attach",
          },
          {
            "name": "(Windows) Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": ""
          },
          {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "-N=1024",
                "-use_cuda=1",
                "-use_cache=1",
                "-use_fastFill=1"
            ]
          }
    ]
}