{
    "version": "0.2.0",
    "configurations": [
        {
          "name": "Python: Current File",
          "type": "debugpy",
          "request": "launch",
          "program": "${file}",
          "console": "integratedTerminal",
          "cwd": "${workspaceFolder}",
          "args": [
            "-end_frame=100"
          ]
        },  
        {
            "name": "profile",
            "type": "debugpy",
            "request": "launch",
            "module": "cProfile",
            "args":["-o",
                    "${fileBasenameNoExtension}.prof",
                    "${file}"]
        },
        {
            "name": "Python C++ Debug",
            "type": "pythoncpp",
            "request": "launch",
            "pythonLaunchName": "Python: Current File",
            "cppAttachName": "(Windows) Attach",
          },
          {
            "name": "(Windows) Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": ""
          },     

          {
            "name": "Debug extra_spring",
            "type": "debugpy",
            "request": "launch",
            "program": "engine/soft/soft3d.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
              "-end_frame=100",
              "-use_extra_spring=1",
              "-mu=1e8",
              "-geo_dir=data/model/extraSpring",
              "-solver_type=AMG"
            ]
          }, 
          {
            "name": "Debug pin",
            "type": "debugpy",
            "request": "launch",
            "program": "engine/soft/soft3d.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
              "-end_frame=100",
              "-use_pintoanimation=1",
              "-mu=1e9",
              "-maxiter=50"
            ]
          }, 
          {
            "name": "debug Newton",
            "type": "debugpy",
            "request": "launch",
            "program": "engine/cloth/cloth3d.py",
            // "program": "${file}",
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
              "-solver_type=NEWTON",
              "-cloth_mesh_type=txt",
              "-pos_file=E:/Dev/fast_mass_spring/fast_mass_spring/pos.txt",
              "-edge_file=E:/Dev/fast_mass_spring/fast_mass_spring/edge.txt",
              "-tri_file=E:/Dev/fast_mass_spring/fast_mass_spring/tri.txt",
              "-delta_t=0.0333",
              "-use_cuda=1",
              "-maxiter=10",
              "-calc_energy=1",
              "-compliance=0.00833333333333333", 
              "-N=20",
              "-end_frame=6"
            ]
          }   ,
          {
            "name": "debug Newton2",
            "type": "debugpy",
            "request": "launch",
            "program": "engine/cloth/cloth3d.py",
            // "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
              "-solver_type=NEWTON",
              "-calc_energy=1",
              "-use_cuda=1",
              "-export_state=1",
              "-N=64",
              "-end_frame=100",
              "-setup_num=0",
              "-restart_file=result/meta/0099.npz"
              
            ]
          }   
    ]
}