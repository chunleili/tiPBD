{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debugpy: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": []
        },
        {
            "name": "profile",
            "type": "debugpy",
            "request": "launch",
            "module": "cProfile",
            "justMyCode": true,
            "args":["-o",
                    "${fileBasenameNoExtension}.prof",
                    "${file}"]
        },
        {
            "name": "debugpy: cloth3d",
            "type": "debugpy",
            "request": "launch",
            "program": "engine/cloth/cloth3d.py",
            "console": "integratedTerminal",
            "args": [
                "-N=64",
                "-use_cache=0",
            ]
        }
    ]
}